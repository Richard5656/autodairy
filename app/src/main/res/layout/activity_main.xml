<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:id="@+id/linearlayout_daychoose"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Spinner
                android:id="@+id/spinner_daychoose_year"
                android:entries="@array/daychoose_year"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

        <Spinner
                android:id="@+id/spinner_daychoose_month"
                android:entries="@array/daychoose_month"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>

        <Spinner
                android:id="@+id/spinner_daychoose_day"
                android:entries="@array/daychoose_day"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_mainactivity_dairyshow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>